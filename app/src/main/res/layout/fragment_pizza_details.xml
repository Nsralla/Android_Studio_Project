<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Pizza Image -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/pizza_icon"
        android:contentDescription="Pizza Image"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

        <!-- Pizza Name Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Name:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <!-- Pizza Name -->
        <TextView
            android:id="@+id/pizzaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#C85B5B"
            android:layout_gravity="center_horizontal"
            android:text="Margherita Pizza"
        android:layout_marginBottom="16dp"/>

        <!-- Pizza Price Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <!-- Pizza Price -->
        <TextView
            android:id="@+id/pizzaPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="20sp"
            android:textColor="#555555"
            android:layout_gravity="center_horizontal"
            android:text="L: $9.99, M: $7.00 S:$5.00"
        android:layout_marginBottom="16dp"/>

        <!-- Pizza Size Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <!-- Pizza Size -->
        <TextView
            android:id="@+id/pizzaSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="#777777"
            android:layout_gravity="center_horizontal"
            android:text="Medium"
        android:layout_marginBottom="16dp"/>

        <!-- Pizza Category Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <!-- Pizza Category -->
        <TextView
            android:id="@+id/pizzaCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="#777777"
            android:layout_gravity="center_horizontal"
            android:text="Vegetarian"
        android:layout_marginBottom="24dp"/>

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            app:backgroundTint="#283593"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</FrameLayout>
